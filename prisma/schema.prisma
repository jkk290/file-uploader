generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  password String

  Folder Folder[]
}

model Session {
  id  String  @id
  sid String  @unique
  data String 
  expiresAt DateTime
}

model Folder {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  owner User @relation(fields: [ownerId], references: [id])
  ownerId Int
  creationAt DateTime @default(now())
  modifiedAt DateTime @updatedAt

  @@unique([ownerId, name])
}

